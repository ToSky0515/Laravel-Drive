{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
     "parserOptions": {
         "parser": "babel-eslint"
     },
    "extends": [
        "airbnb-base",
        "plugin:vue/recommended"
    ],
    "globals": {
        "axios": true,
        "Vue": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.js"
            }
        }
    },
    "rules": {
        "import/extensions": ["error", "always", {
            "js": "never",
            "vue": "never"
        }],
        "indent": ["error", 4],
        "vue/html-indent": ["error", 4],
        "no-param-reassign": ["error", { "props": false }],
        "space-before-function-paren": ["error", "always"]
    }
}